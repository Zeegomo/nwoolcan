<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nwoolcan.view.production.NewBatchModalController">
    <ScrollPane fitToWidth="true"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <BorderPane>
            <top>
                <Label text="New Batch" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>
            </top>
            <center>
                <VBox BorderPane.alignment="CENTER_LEFT">
                    <TitledPane text="General info">
                        <HBox>
                            <VBox>
                                <FlowPane>
                                    <Label text="Beer name" />
                                    <TextField fx:id="beerNameTextField" />
                                </FlowPane>
                                <FlowPane>
                                    <Label text="Beer style" />
                                    <TextField fx:id="beerStyleTextField" />
                                </FlowPane>
                                <FlowPane>
                                    <Label text="Beer category" />
                                    <TextField fx:id="beerCategoryTextField" />
                                </FlowPane>
                            </VBox>
                            <VBox>
                                <FlowPane>
                                    <Label text="Batch method" />
                                    <ComboBox fx:id="batchMethodsComboBox" />
                                </FlowPane>
                                <FlowPane>
                                    <Label text="Inital size" />
                                    <TextField fx:id="initialSizeTextField" />
                                    <Label fx:id="initialSizeUnitOfMeasureLabel" text="?" />
                                </FlowPane>
                            </VBox>
                        </HBox>
                    </TitledPane>
                    <TitledPane text="Ingredients">
                        <BorderPane>
                            <top>
                                <HBox>
                                    <Label text="Quantity value" />
                                    <TextField fx:id="quantityIngredientTextField" />
                                    <Label fx:id="ingredientUnitOfMeasureLabel" text="?" />
                                    <ComboBox fx:id="ingredientsComboBox" />
                                    <Button text="Add" onAction="#addIngredientClick" />
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="ingredientsTableView" maxHeight="150">
                                    <columnResizePolicy>
                                        <TableView fx:constant = "CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn text="Quantity" >
                                            <cellValueFactory>
                                                <PropertyValueFactory property="left"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="Ingredient" >
                                            <cellValueFactory>
                                                <PropertyValueFactory property="right"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </TitledPane>
                    <TitledPane text="Water measurement">
                        <BorderPane>
                            <top>
                                <HBox>
                                    <Label text="Registration value" />
                                    <TextField fx:id="registrationValueTextField" />
                                    <ComboBox fx:id="elementsComboBox" />
                                    <Button text="Add" onAction="#addElementRegistrationClick" />
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="elementsTableView" maxHeight="150">
                                    <columnResizePolicy>
                                        <TableView fx:constant = "CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn text="Registered values" >
                                            <cellValueFactory>
                                                <PropertyValueFactory property="left"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="Elements" >
                                            <cellValueFactory>
                                                <PropertyValueFactory property="right"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </TitledPane>
                </VBox>
            </center>
            <bottom>
                <Button text="Create" BorderPane.alignment="CENTER" onAction="#createBatchClick" />
            </bottom>
        </BorderPane>
    </ScrollPane>
</AnchorPane>
