<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<?import nwoolcan.view.subview.SubView?>
<?import nwoolcan.view.subview.SubViewContainer?>

<SubView fx:id="articleDetailSubView"
         xmlns="http://javafx.com/javafx/8.0.172-ea"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="nwoolcan.view.brewery.warehouse.article.ArticleDetailViewController">
    <ScrollPane fitToWidth="true"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <BorderPane>
            <top>
                <Label text="New Article" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="10.0" />
                    </BorderPane.margin>
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>
            </top>
            <center>
                <VBox spacing="5">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                    <FlowPane BorderPane.alignment="CENTER">
                        <Label text="Existing article will not be created again."/>
                    </FlowPane>
                    <FlowPane>
                        <Label text="Name " />
                        <!--TextField text="Article Name" fx:id="newArticleName" onKeyReleased="#newNameFieldChanged"/-->
                        <TextField text="Article Name" fx:id="newArticleName"/>
                    </FlowPane>
                    <FlowPane>
                        <Label text="Unit of measure " />
                        <ComboBox fx:id="newArticleUnitOfMeasure"/>
                    </FlowPane>
                    <FlowPane>
                        <Label text="Type " />
                        <!--ComboBox fx:id="newArticleType" onAction="#selectArticleTypeClick"/-->
                        <ComboBox fx:id="newArticleType"/>
                    </FlowPane>
                    <FlowPane fx:id="ingredientTypeFlowPane" visible="false" managed="false">
                        <Label text="Ingredient Type: " />
                        <Label fx:id="articleIngredientType"/>
                    </FlowPane>
                </VBox>
            </center>
            <bottom>
                <Button text="Sb" onAction="#BackButtonClick"/>
            </bottom>
        </BorderPane>
    </ScrollPane>
</SubView>
