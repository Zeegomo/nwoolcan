<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<?import nwoolcan.view.subview.SubView?>

<SubView fx:id="articleDetailSubView"
         xmlns="http://javafx.com/javafx/8.0.172-ea"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="nwoolcan.view.warehouse.article.ArticleDetailViewController">
    <ScrollPane fitToWidth="true"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <BorderPane>
            <top>
                <Label text="New Article" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="10.0" />
                    </BorderPane.margin>
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>
            </top>
            <center>
                <VBox spacing="5">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                    <FlowPane>
                        <Label text="Id: " />
                        <Label fx:id="articleId"/>
                    </FlowPane>
                    <FlowPane>
                        <Label text="Name: " />
                        <Label fx:id="articleName"/>
                    </FlowPane>
                    <FlowPane>
                        <Label text="Unit of measure: " />
                        <Label fx:id="articleUnitOfMeasure"/>
                    </FlowPane>
                    <FlowPane>
                        <Label text="Type: " />
                        <Label fx:id="articleType"/>
                    </FlowPane>
                    <FlowPane fx:id="ingredientTypeFlowPane">
                        <Label text="Ingredient Type: "/>
                        <Label fx:id="articleIngredientType"/>
                    </FlowPane>
                    <FlowPane>
                        <Label text="New name: "/>
                        <TextField fx:id="newNameTextField"/>
                    </FlowPane>
                </VBox>
            </center>
            <bottom>
                <FlowPane>
                <Button text="Back" onAction="#backButtonClick"/>
                <Button text="Change Name" onAction="#changeNameClicked"/>
                </FlowPane>
            </bottom>
        </BorderPane>
    </ScrollPane>
</SubView>
