<?xml version="1.0" encoding="UTF-8"?>

<?import nwoolcan.view.subview.SubView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<SubView xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="nwoolcan.view.warehouse.stock.StockDetailController"
         fx:id="stockDetailSubView">
    <BorderPane>
        <top>
            <Label text="Stock Detail" BorderPane.alignment="CENTER">
                <font>
                    <Font size="28.0" />
                </font>
            </Label>
        </top>
        <center>
            <VBox>
                <Button text="Back" onAction="#backButtonClick"/>
                <TitledPane text="General informations">
                    <HBox>
                        <VBox>
                            <FlowPane>
                                <Label text="Id: "/>
                                <Label fx:id="lblId"/>
                            </FlowPane>
                            <FlowPane>
                                <Label text="Article: "/>
                                <Label fx:id="lblArticle"/>
                            </FlowPane>
                            <FlowPane>
                                <Label text="Available: "/>
                                <Label fx:id="lblAvailableQt"/>
                            </FlowPane>
                            <FlowPane>
                                <Label text="Used: "/>
                                <Label fx:id="lblUsedQt"/>
                            </FlowPane>
                            <FlowPane>
                                <Label text="Last modified: "/>
                                <Label fx:id="lblLastModified"/>
                            </FlowPane>
                            <FlowPane>
                                <Label text="Creation date: "/>
                                <Label fx:id="lblCreationDate"/>
                            </FlowPane>
                        </VBox>
                        <Button text="Go to article" onAction="#goToArticleButtonClick"/>
                    </HBox>
                </TitledPane>
                <TitledPane text="Records">
                    <TableView fx:id="recordTable"/>
                </TitledPane>
            </VBox>
        </center>
    </BorderPane>

</SubView>
