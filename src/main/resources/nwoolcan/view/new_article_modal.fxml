<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nwoolcan.view.warehouse.article.NewArticleModalViewController">
        <BorderPane>
            <top>
                <Label text="New Article" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="10.0" />
                    </BorderPane.margin>
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>
            </top>
            <center>
                <GridPane vgap="5" hgap="5">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                    <Label GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" text="Existing article will not be created again."/>
                    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Name" />
                    <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" text="Article Name" fx:id="newArticleName" onKeyReleased="#newNameFieldChanged"/>
                    <Label GridPane.rowIndex="2" GridPane.columnIndex="0" text="Unit of measure " />
                    <ComboBox GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="newArticleUnitOfMeasure"/>
                    <Label GridPane.rowIndex="3" GridPane.columnIndex="0" text="Type" />
                    <ComboBox GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="newArticleType" onAction="#selectArticleTypeClick"/>
                    <Label GridPane.rowIndex="4" GridPane.columnIndex="0" text="Ingredient Type" fx:id="lblIngType"/>
                    <ComboBox GridPane.rowIndex="4" GridPane.columnIndex="1" fx:id="newArticleIngredientType"/>
                </GridPane>
            </center>
            <bottom>
                <Button text="Create" BorderPane.alignment="CENTER" onAction="#createArticleClick" fx:id="createArticleButton">
                    <BorderPane.margin>
                        <Insets bottom="10.0" />
                    </BorderPane.margin>
                </Button>
            </bottom>
        </BorderPane>
</AnchorPane>
