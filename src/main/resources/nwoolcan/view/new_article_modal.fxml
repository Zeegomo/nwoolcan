<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nwoolcan.view.warehouse.article.NewArticleModalController">
    <ScrollPane fitToWidth="true"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <BorderPane>
            <top>
                <Label text="New Article" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="10.0" />
                    </BorderPane.margin>
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>
            </top>
            <center>
                <VBox spacing="5">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                    <Label text="Existing article will not be created again."/>
                    <Label text="Name" />
                    <TextField text="Article Name" fx:id="newArticleName" onKeyReleased="#newNameFieldChanged"/>
                    <Label text="Unit of measure " />
                    <ComboBox fx:id="newArticleUnitOfMeasure"/>
                    <Label text="Type" />
                    <ComboBox fx:id="newArticleType" onAction="#selectArticleTypeClick"/>
                    <VBox fx:id="ingredientTypeFlowPane" spacing="5">
                        <Label text="Ingredient Type" />
                        <ComboBox fx:id="newArticleIngredientType"/>
                    </VBox>
                </VBox>
            </center>
            <bottom>
                <Button text="Create" BorderPane.alignment="CENTER" onAction="#createArticleClick" fx:id="createArticleButton">
                    <BorderPane.margin>
                        <Insets bottom="10.0" />
                    </BorderPane.margin>
                </Button>
            </bottom>
        </BorderPane>
    </ScrollPane>
</AnchorPane>
