<?xml version="1.0" encoding="UTF-8"?>

<?import nwoolcan.view.subview.SubView?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>
<SubView xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:id="welcomeSubView"
         fx:controller="nwoolcan.view.welcome.WelcomeViewController">
    <TilePane alignment="CENTER" vgap="20" orientation="VERTICAL">
        <Label>
            <font><Font size="28" /></font>
            Welcome to nWoolcan
        </Label>
        <Button maxWidth="Infinity" onAction="#createNewBreweryClicked">Create new Brewery</Button>
        <Button maxWidth="Infinity">Load an existing Brewery</Button>
    </TilePane>
</SubView>
