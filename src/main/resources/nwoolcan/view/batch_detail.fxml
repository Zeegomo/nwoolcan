<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import nwoolcan.view.subview.SubView?>
<?import nwoolcan.view.subview.SubViewContainer?>

<?import javafx.scene.layout.HBox?>
<SubView fx:id="batchDetailSubView" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nwoolcan.view.production.BatchDetailController">
    <BorderPane>
        <top>
            <BorderPane BorderPane.alignment="CENTER">
                <left>
                    <Button fx:id="goBackButton" onAction="#goBackButtonClicked" text="Back" />
                </left>
                <center>
                    <Label text="Batch detail">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
                </center>
            </BorderPane>
        </top>
        <center>
            <VBox>
                <TitledPane text="Batch informations">
                    <BorderPane>
                        <center>
                            <SubViewContainer>
                                <!-- TODO fill with batch info sub view -->
                            </SubViewContainer>
                        </center>
                        <right>
                            <VBox BorderPane.alignment="CENTER_RIGHT">
                                <Button fx:id="goToNextStepButton" onAction="#goToNextStepButtonClicked" text="Go to next step" />
                                <Button fx:id="stockBatchButton" disable="true" text="Stock batch" />
                            </VBox>
                        </right>
                    </BorderPane>
                </TitledPane>
                <TitledPane text="Steps">
                    <SubViewContainer fx:id="masterTableContainer" parent="$batchDetailSubView" />
                </TitledPane>
                <TitledPane text="Review">
                    <BorderPane>
                        <center>
                            <SubViewContainer fx:id="reviewContainer" />
                        </center>
                        <bottom>
                            <HBox BorderPane.alignment="BOTTOM_CENTER"  alignment="CENTER">
                                <Button onAction="#addReviewClick" text="Add review" />
                                <Button fx:id="viewReviewButton" onAction="#viewReviewClick" text="View" />
                            </HBox>
                        </bottom>
                    </BorderPane>
                </TitledPane>
            </VBox>
        </center>
    </BorderPane>
</SubView>
