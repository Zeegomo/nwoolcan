<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import nwoolcan.view.subview.SubView?>
<?import nwoolcan.view.subview.SubViewContainer?>

<SubView fx:id="batchDetailSubView" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nwoolcan.view.production.BatchDetailController">
    <BorderPane>
        <top>
            <BorderPane BorderPane.alignment="CENTER">
                <left>
                    <Button fx:id="goBackButton" onAction="#goBackButtonClicked" text="Back" />
                </left>
                <center>
                    <Label text="Batch detail">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
                </center>
            </BorderPane>
        </top>
        <center>
            <VBox>
                <TitledPane text="Batch informations">
                    <BorderPane>
                        <center>
                            <SubViewContainer fx:id="batchInfoContainer" />
                        </center>
                        <right>
                            <VBox BorderPane.alignment="CENTER_RIGHT">
                                <Button fx:id="stockBatchButton" alignment="TOP_RIGHT" contentDisplay="RIGHT" disable="true" text="Stock batch" />
                                <Button fx:id="viewInfoDetailButton" onAction="#viewInfoDetailClicked" text="View Info" />
                            </VBox>
                        </right>
                    </BorderPane>
                </TitledPane>
                <TitledPane text="Steps">
                    <BorderPane>
                        <center>
                            <SubViewContainer fx:id="masterTableContainer" parent="$batchDetailSubView" />
                        </center>
                        <top>
                            <Button fx:id="goToNextStepButton" onAction="#goToNextStepButtonClicked" text="Go to next step" />
                        </top>
                    </BorderPane>
                </TitledPane>
                <TitledPane text="Review">
                    <SubViewContainer>
                        <!-- TODO fill with evaluation sub view -->
                    </SubViewContainer>
                </TitledPane>
            </VBox>
        </center>
    </BorderPane>
</SubView>
