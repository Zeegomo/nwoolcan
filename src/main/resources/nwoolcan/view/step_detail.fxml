<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import nwoolcan.view.subview.SubView?>

<?import javafx.geometry.Insets?>
<SubView fx:id="stepDetailSubView" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nwoolcan.view.production.StepDetailController">
    <BorderPane>
        <top>
            <BorderPane BorderPane.alignment="CENTER">
                <left>
                    <Button onAction="#goBackButtonClicked" text="Back" />
                </left>
                <center>
                    <Label text="Step detail">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
                </center>
            </BorderPane>
        </top>
        <center>
            <VBox>
                <TitledPane text="Step informations">
                    <BorderPane>
                        <center>
                            <VBox>
                                <VBox>
                                    <HBox>
                                        <Label text="Step type :" />
                                        <Label fx:id="stepTypeNameLabel" />
                                    </HBox>
                                    <HBox>
                                        <Label text="Initial date :" />
                                        <Label fx:id="initialDateLabel" />
                                    </HBox>
                                    <HBox>
                                        <Label text="End date :" />
                                        <Label fx:id="endDateLabel" />
                                    </HBox>
                                    <HBox>
                                        <Label text="Duration :" />
                                        <Label fx:id="durationLabel" />
                                    </HBox>
                                    <HBox>
                                        <Label text="Finalized : "/>
                                        <Label fx:id="finalizedLabel" />
                                    </HBox>
                                </VBox>
                            </VBox>
                        </center>
                        <right>
                            <VBox alignment="CENTER">
                                <Button fx:id="registerParameterButton" disable="true" onAction="#registerParameterButtonClicked" text="Register parameter" />
                            </VBox>
                        </right>
                    </BorderPane>
                </TitledPane>
                <TitledPane text="Registered parameters grafics">
                    <VBox fx:id="parametersGraficsVBox">

                    </VBox>
                </TitledPane>
<!--                <TitledPane text="Registered parameter table">-->
<!--                </TitledPane>-->
            </VBox>
        </center>
    </BorderPane>
</SubView>
