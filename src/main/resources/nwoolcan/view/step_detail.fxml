<?xml version="1.0" encoding="UTF-8"?>


<?import nwoolcan.view.subview.SubView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TitledPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<SubView xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="nwoolcan.view.production.StepDetailController"
         fx:id="stepDetailSubView" >
    <BorderPane>
        <top>
            <BorderPane BorderPane.alignment="CENTER">
                <left>
                    <Button onAction="#goBackButtonClicked" text="Back" />
                </left>
                <center>
                    <Label text="Step detail">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
                </center>
            </BorderPane>
        </top>
        <center>
            <VBox>
                <TitledPane text="Step informations">
                    <BorderPane>
                        <center>
                            <HBox>
                                <VBox>
                                    <Label text="Step type" />
                                    <Text fx:id="stepTypeName" />
                                </VBox>
                            </HBox>
                        </center>
                        <right>
                            <VBox BorderPane.alignment="CENTER_RIGHT">
                                <Button fx:id="registerParamterButton" disable="true" text="Register parameter" onAction="#registerParameterButtonClicked" />
                            </VBox>
                        </right>
                    </BorderPane>
                </TitledPane>
                <TitledPane text="Registered parameters grafics">
                </TitledPane>
                <TitledPane text="Registered parameter table">
                </TitledPane>
            </VBox>
        </center>
    </BorderPane>
</SubView>
